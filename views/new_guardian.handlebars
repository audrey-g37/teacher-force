<div>
  {{#if loggedIn}}
  {{>back_nav}}
    <div class="new-card">
      <form action="/teacher/student/guardian/new-guardian" method="POST">
        <ul>
          <div>
            <label for="firstName">First Name: </label>
            <input type="text" id="firstName" name="firstName" />
            <label for="lastName">Last Name: </label>
            <input type="text" id="lastName" name="lastName"></input>
            <label for="email">Email: </label>
            <input type="text" id="email" name="email"></input>
            <label for="phoneNumber">Phone Number: </label>
            <input type="text" id="phoneNumber" name="phoneNumber"></input>
        </ul>
        <div>
          <label class="studentId" for="studentId">Student: </label>
            <select id="studentId" name="studentId">
              {{#each studentData as |student|}}
              {{>student_name_list}}
              {{/each}}
            </select>
        </div>
        <div>
          <button class="student-button" type="submit">Add Guardian</button>
        </div>
      </form>
    </div>
  {{else}}
    <a href="/login">Click here to login</a>
  {{/if}}

</div>